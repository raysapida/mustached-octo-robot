<%= simple_form_for([@album, @picture], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  	<div class="form-group">
			<label for="asset" class="col-sm-2 control-label">Asset</label>
			<div class="col-sm-10">
				<%= f.input :asset, label: false, as: :file %>
			</div>
		</div>
			
		<%= bootstrap_paperclip_picture f, :asset %>
		
		<div class="form-group">
			<label for="caption" class="col-sm-2 control-label">Caption</label>
			<div class="col-sm-10">
				<%= f.input :caption, label: false , input_html: { class: 'input-xxlarge' } %>
			</div>
		</div>

		<div class="form-group">
			<label for="description" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-10">
				<%= f.input :description, label: false , input_html: { class: 'input-xxlarge', rows: 4 }  %>
			</div>
		</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
