<%= page_header do %>
	<% if signed_in? && current_user == @user %>
		<%= link_to 'New Album', new_album_path, class: 'btn pull-right btn-success' %>
		<h1>Listing albums</h1>
	<% end %>
<% end %>

<div class="container">
	<% @albums.each do |album| %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<%= link_to album_thumbnail(album), album_pictures_path(album) %><br/>
				<div class="caption">
				<%= link_to "View Albums", album_pictures_path(@user, album), class: "btn btn-primary" %>
				<% if can_edit_album?(album) %>
					<%= link_to "Edit", edit_album_path(album), class: "btn btn-default" %>
					<%= link_to "Delete", album_path(album), class: "btn btn-default" , method: :delete, data: {confirm: "Are you sure?"} %>
				<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>