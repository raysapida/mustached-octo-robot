<%= page_header do %>
<h1>Listing albums</h1>
<% end %>

<div class="container">
	<% @albums.each do |album| %>
		<div class="col-md-3">
			<div class="thumbnail">
				<%= link_to album_thumbnail(album), album_pictures_path(album) %><br/>
				<%= link_to "View Albums", album_pictures_path(@user, album) %>
				<% if can_edit_album?(album) %>
					| <%= link_to "Edit", edit_album_path(album) %>
					| <%= link_to "Delete", album_path(album), method: :delete, data: {confirm: "Are you sure?"} %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

<%= link_to 'New Album', new_album_path %>
